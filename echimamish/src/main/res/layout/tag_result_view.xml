<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:paddingEnd="8dp"
                                                   android:paddingStart="8dp"
    >
    <TextView
        style="@style/TextAppearance.AppCompat.Caption"
        android:id="@+id/tv_tag_code_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tag_serial"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_tag_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="8dp"/>
    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/tv_tag_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tag_code_label"
        app:layout_constraintBottom_toTopOf="@+id/tv_tag_type_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="04:AB:05:AF:5A:13:80"
        tools:layout_editor_absoluteX="8dp"/>
    <TextView
        style="@style/TextAppearance.AppCompat.Caption"
        android:id="@+id/tv_tag_type_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tag_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_tag_code"
        app:layout_constraintBottom_toTopOf="@+id/tv_tag_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="8dp"/>
    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/tv_tag_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tag_type_label"
        app:layout_constraintBottom_toTopOf="@+id/tv_ndef_label"
        tools:text="DESFire EV1 4K"
        tools:layout_editor_absoluteX="8dp"/>
    <TextView
        style="@style/TextAppearance.AppCompat.Caption"
        android:id="@+id/tv_ndef_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ndef_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tag_type"
        app:layout_constraintBottom_toTopOf="@+id/dnv_display_ndef_view"
        tools:layout_editor_absoluteX="8dp"/>
    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/tv_ndef_none"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_ndef_data_found"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ndef_label"
        tools:layout_editor_absoluteX="8dp"/>
    <com.taptrack.echimamish.DisplayNdefView
        style="@style/TextAppearance.AppCompat.Caption"
        android:id="@+id/dnv_display_ndef_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ndef_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>